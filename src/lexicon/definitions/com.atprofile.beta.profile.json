{
    "lexicon": 1,
    "id": "com.atprofile.beta.profile",
    "defs": {
        "main": {
            "type": "record",
            "key": "self",
            "record": {
                "type": "object",
                "required": ["content"],
                "properties": {
                    "content": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 500000
                    },
                    "newlinesToLinebreaks": {
                        "type": "boolean"
                    },
                    "context": {
                        "type": "array",
                        "items": { "type": "ref", "ref": "#contextItem" }
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "datetime"
                    }
                }
            }
        },
        "contextItem": {
            "type": "object",
            "required": ["collection", "name"],
            "properties": {
                "collection": {
                    "type": "string",
                    "format": "nsid"
                },
                "name": {
                    "type": "string"
                },
                "limit": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 100
                },
                "rkey": {
                    "type": "string"
                }
            }
        }
    }
}
